
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="row">
    <h2>Movies</h2>


    <div class="row">
        <div class="col-md-4 col-lg-2">
            @Html.ActionLink("Add Movie", "New", "Movies", new
            {
                @class = "btn btn-primary  btnforadd",
                @type = "button"
            })
        </div>

    </div>
    <div class="table-responsive">
        <table id="table1" class="table table-striped  table-bordered table-sm" cellspacing="0">
            <thead>
            <tr>
                <th>Name</th>
                <th>Gener</th>
                <th>Day Of Added</th>
                <th>Publish Date</th>
                <th>Stock</th>
                <th>Delete</th>
            </tr>
            </thead>

            <tbody></tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#table1").DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: (data, type, movie) => {
                            return "<a href='/movies/details/" + movie.id + "'>" + data + "</a>";
                        }

                    },
                    {
                        data: "gener.name"
                    },
                    {
                        data: "dayOfAdded",
                        render: function (data) {
                            var date = new Date(data);
                            var month = date.getMonth() + 1;
                            return date.getDate() + "/" + month + "/" + date.getFullYear();
                        }
                    },
                    {
                        data: "publishDate",
                        render: function (data) {
                            var date = new Date(data);
                            var month = date.getMonth() + 1;
                            return date.getDate() + "/" + month + "/" + date.getFullYear();
                        }
                    },
                    {
                        data: "availInStock"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='js-del btn btn-danger' data-id = '" + data + "'>Delete</button>";
                        }
                    }
                ]
            });


            $("#table1").on("click", ".js-del", function () {

                var btn = $(this);

                bootbox.confirm({
                    message: "Sure To delete",
                    buttons: {
                        confirm: {
                            label: "Yes",
                            className: "btn btn-danger"
                        },
                        cancel: {
                            label: "No",
                            className: "btn btn-success"
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/movies/" + btn.attr("data-id"),
                                method: "DELETE",
                                success: () => {
                                    table.row(btn.parents("tr")).remove().draw();
                                }
                            });
                        }
                    }
                });
            });

        });





    </script>
}
