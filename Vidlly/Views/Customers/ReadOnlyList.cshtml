
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <h2>Customers</h2>

    <div class="table-responsive">
        <table id="table" class="table table-striped  table-bordered table-sm" cellspacing="0">
            <thead>
            <tr>
                <th class="th-sm ">
                    Name

                </th>
                <th class="th-sm">
                    Membership Type

                </th>
                <th class="th-sm">
                    Discount Rate

                </th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {


            var table = $("#table").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: (data, type, customer) => {
                            return "<a href = '/customers/details/"+customer.id+"'>"+data+"</a>";
                        }
                    },
                    {
                        data: "memberShipType.name"
                    },
                    {
                        data: "memberShipType.discoutRate",
                        render: (data) => {
                            return data + "%";
                        }
                    }
                ]
            });


        })
    </script>
}
