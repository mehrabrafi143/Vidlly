
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center">
    <div class="col-md-4 col-lg-2">
        @Html.ActionLink("Add Customer","New","Customers",new
        {
            @class = "btn btn-primary  btnforadd",
            @type = "button"
        })
    </div>

</div>

<h2>Customers</h2>

<div class="row">
    <div class="table-responsive">
        <table id="table" class="table table-striped  table-bordered table-sm" cellspacing="0">
            <thead>
                <tr>
                    <th class="th-sm " scope="col">
                        Name

                    </th>
                    <th class="th-sm" scope="col">
                        Membership Type

                    </th>
                    <th class="th-sm" scope="col">
                        Discount Rate

                    </th>
                    <th scope="col">
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

</div>


@section scripts
{
    <script>
        $(document).ready(function () {


            var table = $("#table").DataTable({
                responsive: true,
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: (data, type, customer) => {
                            return "<a href = '/customers/details/" + customer.id + "'>" + data + "</a>";
                        }
                    },
                    {
                        data: "memberShipType.name"
                    },
                    {
                        data: "memberShipType.discoutRate",
                        render: (data) => {
                            return data + "%";
                        }
                    },
                    {
                        data: "id",
                        render: (data) => {
                            return "<button id='js-delt' data-id =" + data + " type='button'  class ='btn  btn-danger' >Delete</button>";
                        }
                    }
                ]
            });

            $("#table").on("click", "#js-delt", function (res) {
                var btn = $(this);


                bootbox.confirm({
                    message: "This is a confirm with custom button text and color! Do you like it?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/customers/" + btn.attr("data-id"),
                                method: "DELETE",
                                success: () => {
                                    table.row(btn.parents("tr")).remove().draw();
                                }
                            });
                        }
                    }
                });

            });

        })
    </script>
}
