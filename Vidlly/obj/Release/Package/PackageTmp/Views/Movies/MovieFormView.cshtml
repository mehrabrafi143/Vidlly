@model Vidlly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "MovieFormView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PublishDate)
        @Html.TextBoxFor(m => m.PublishDate, "{0:dd-MM-yyyy}", new { @class = "form-control datePicker" })
        @Html.ValidationMessageFor(m => m.PublishDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenerId)
        @Html.DropDownListFor(m => m.GenerId, new SelectList(Model.Geners, "Id", "Name"), "Select Gener", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenerId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">Save</button>

}


@section scripts{
    @Scripts.Render("~/bundles/val")
}
